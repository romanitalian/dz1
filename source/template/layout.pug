include ./sections/_mixins
- var ttl = "romanitalian"

doctype html
html(lang='ru')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width')
        link(href='/assets/css/app.css', rel='stylesheet')

        block title
            title #{ttl} | main

block content
    .wrapper
        section.section.hero
            .hero__bg
                img(src="/assets/img/portfolio.jpg" alt="mounting backgournd").hero__bg-img

            .hero__container
                img(src="/assets/img/portfolio-header.png" alt="portfolio-header").hero-title-pic

            .user
                .user__pic-container
                    img(src="/assets/img/user.jpg" alt="").user__pic
                    .user__name Roman Roman
                    .user__desc desct this page